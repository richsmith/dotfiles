[user]
	name = Rich Smith

[pull]
	rebase = false

[core]
	excludesFile = ~/.gitignore
	editor = emacs -nw -q

[push]
	autoSetupRemote = true

[alias]
        co = checkout

        s = status -sb

        l = log --oneline
        last = log -1 HEAD --stat

	recent-branches = for-each-ref --sort=-committerdate --count=10 --format='%(refname:short)' refs/heads/
        rb = recent-branches
	branch-history = recent-branches
        bh = branch-history


[branch]

	sort = -committerdate